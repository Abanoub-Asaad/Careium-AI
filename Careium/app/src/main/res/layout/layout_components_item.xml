<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground"
    app:cardBackgroundColor="@color/amber_900"
    app:cardCornerRadius="@dimen/small_card_radius"
    app:cardElevation="@dimen/elevation_card"
    app:contentPadding="@dimen/tiny_spacing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_component_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:padding="@dimen/tiny_spacing"
            android:scaleX="1.2"
            android:scaleY="1.6"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="3000" />

        <TextView
            android:id="@+id/text_component_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/tiny_spacing"
            android:scaleX="0.9"
            android:textAllCaps="true"
            android:textColor="@color/amber_700"
            android:textSize="@dimen/small_text_size"
            tools:text="@string/budget" />
    </LinearLayout>

</androidx.cardview.widget.CardView>